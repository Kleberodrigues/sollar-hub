# Supabase Configuration
# Obtenha em: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role Key (apenas para server-side - NUNCA expor no cliente)
# Obtenha em: Supabase Dashboard > Settings > API > service_role
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Stripe Configuration (Opcional - para billing)
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs - Nova Estrutura de Planos (apenas anual)
# Execute: npx tsx scripts/setup-stripe-products.ts para criar os produtos
# Planos: Base (50-120 colab), Intermediario (121-250), Avancado (251-400)
STRIPE_PRICE_BASE_YEARLY=price_xxx
STRIPE_PRICE_INTERMEDIARIO_YEARLY=price_xxx
STRIPE_PRICE_AVANCADO_YEARLY=price_xxx

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# n8n Webhook Integration (Opcional - para automacoes)
# Configure seu n8n e obtenha a URL do webhook
N8N_WEBHOOK_URL=https://seu-n8n.com/webhook/sollar-events
N8N_WEBHOOK_SECRET=gere-um-secret-seguro-aqui

# n8n API (para scripts de automacao)
# Obtenha em: n8n > Settings > API > API Keys
N8N_API_URL=https://seu-n8n.com/api/v1
N8N_API_KEY=your-n8n-api-key

# Resend Email API (para envio de emails)
# Obtenha em: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx

# Vercel Cron Jobs (Obrigatorio em producao)
# Gere um secret seguro: openssl rand -hex 32
CRON_SECRET=seu-cron-secret-seguro-aqui

# AI Report Generation (Opcional - para relatórios com IA)
# Configure UMA das opções abaixo:
# Anthropic: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Test Users (apenas para CI/CD - Opcional)
# TEST_USER_EMAIL=test@example.com
# TEST_USER_PASSWORD=TestPassword123!
# TEST_ADMIN_EMAIL=admin@example.com
# TEST_ADMIN_PASSWORD=AdminPassword123!
